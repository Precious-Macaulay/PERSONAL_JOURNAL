<form action="/subscribe" class="form" method="post">
  <label for="name">First Name :</label>
  <input class="name" type="text" name="fname" placeholder="enter your first name" />
  <br />
  <label for="name">Last Name :</label>
  <input class="name" type="text" name="lname" placeholder="enter your last name" />
  <br />
  <label for="email">Email :</label>
  <input
    class="email"
    type="email"
    name="email"
    placeholder="enter your email address"
  />
  <br />
  <button type="submit">Subscribe</button>
</form>
